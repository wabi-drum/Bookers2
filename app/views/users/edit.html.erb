  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <% if @user.errors.any? %>
          <%= @user.errors.count %> errors prohibited this obj from being saved
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @user do |user| %>
          <label for="user_name">Name</label>
          <%= user.text_field :name %>
          <label for="user_image">Image</label>
          <%= user.file_field :profile_image, accept: "image/*" %>
          <label for="user_introduction">Introduction</label>
          <%= user.text_field :introduction %> 
          <%= user.submit 'Update User', class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>