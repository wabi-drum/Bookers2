  <div>
      <div class="col-md-3">
        <h2>User info</H2>
        <%= image_tag 'no_image.jpg', size: "200x200" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr> 
          </tbody>
        </table>

        <h2 class="mt-3">New book</h2>
        <%= form_with model: book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>