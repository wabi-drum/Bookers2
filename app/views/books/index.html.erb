<div class="container px-5 px-sm-0">

<%= render 'users/sidebar', book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= image_tag book.user.get_profile_image(80,80) %>
          </td>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.opinion %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>